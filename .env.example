# Server Configuration
PORT=8080
GRACEFUL_SHUTDOWN_SEC=10

# Cache Configuration
CACHE_SHARDS=32
PER_TENANT_CAPACITY_BYTES=104857600  # 100MB
CLEANUP_INTERVAL_SEC=60              # 1 minute

# Adaptive TTL
ENABLE_ADAPTIVE_TTL=true
ADAPTIVE_MIN_TTL=1m
ADAPTIVE_MAX_TTL=1h

# Bloom Filter
ENABLE_BLOOM_FILTER=true
BLOOM_SIZE=10000000  # 10M bits (~1.2MB)
BLOOM_K=4            # 4 hash functions (optimal for ~1% FP rate)

# Persistence
PERSISTENCE_TYPE=file       # file, wal, noop
DATA_DIR=./data
SNAPSHOT_INTERVAL=5m

# Write-Behind (optional, for high-write workloads)
ENABLE_WRITE_BEHIND=false
WRITE_BUFFER_SIZE=1000
FLUSH_INTERVAL=5s

FIREBASE_TYPE=
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_CLIENT_ID=
FIREBASE_AUTH_URI=
FIREBASE_TOKEN_URI=
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=
FIREBASE_CLIENT_X509_CERT_URL=
FIREBASE_UNIVERSE_DOMAIN=googleapis.com
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_CHAT_SECRET=
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
RESEND_API_KEY=
REQUIRE_AUTH=true

AUTH_SERVICE_PORT=8081
CACHE_CLIENT_URL=http://localhost:8079
POSTGRESQL_HOST=postgres://<username>:<password>@localhost:5432/pomaicache?sslmode=disable
PUBLIC_URL=http://localhost:8080